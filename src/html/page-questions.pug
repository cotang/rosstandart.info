extends partials/templates/_template.pug

block content
  +b.SECTION.page--questions
    .container-fluid
      .row
        .hidden-xs.visible-lg.col-lg-2     
          // Left sidebar
          include partials/components/_left-sidebar.pug 

        .col-xs-12.col-lg-8
          // Content
          +b.SECTION.content(itemscope, itemtype="http://schema.org/Article")
            +e.H1.title(itemprop="headline") Задать вопрос специалисту
            +e.text(itemprop="articleBody")
              p Здравствуйте!
              p Возникшие у вас вопросы, вы можете задать, воспользовавшись формой на этой странице. Обратите внимание, что все поля в форме обязательны для заполнения.
              p Наши специалисты с радостью помогут вам разобраться в тонкостях сертификации! Ждем ваших вопросов!
            // Form question
            include partials/components/_form--question.pug 
            // Questions
            include partials/components/_questions.pug 

        .hidden-xs.visible-lg.col-lg-2 
          // Right sidebar
          include partials/components/_right-sidebar.pug 


